<section>
    <div class="airp">
        <div class="square">
            <h1>REGISTER</h1>

            <form action="/register" method="post">
                <br>
                <br>
                <input type="email" name="email" placeholder="email">
                <br>
                <br>
                <input type="password" name="password" placeholder="password">
                <br>
                <br>
                <input type="submit" value="registrarme!">
                <br>
                <br>
            </form>

            <div class="feedback">

                <a class="login" href="/login">LOGIN</a>
                <br>
                <br>
                {{#if error}}
                <div class="error">
                    {{error}}
                </div>
                {{/if}}


                {{#if message}}
                <div class="message">
                    {{message}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>